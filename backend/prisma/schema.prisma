// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  role      Role     @default(USER)
  phone     String?
  address   String?
  city      String?
  zipCode   String?
  country   String   @default("FR")
  
  // Relations
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Vehicle {
  id          String   @id @default(cuid())
  vin         String   @unique
  make        String
  model       String
  year        Int
  engine      String?
  fuelType    String?
  color       String?
  bodyType    String?
  weight      Float?
  power       Int?
  displacement String?
  
  // Relations
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("vehicles")
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        ServiceType
  price       Float
  isActive    Boolean  @default(true)
  
  // Relations
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Order {
  id              String        @id @default(cuid())
  userId          String
  vehicleId       String
  serviceId       String
  
  // Order details
  plaqueType      String?
  plaqueFormat    String?
  quantity        Int          @default(1)
  totalPrice      Float
  status          OrderStatus  @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  
  // Documents
  documents       Document[]
  
  // Payment
  stripePaymentId String?
  paymentIntentId String?
  
  // Tracking
  trackingNumber  String?
  trackingUrl     String?
  
  // Relations
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle         Vehicle      @relation(fields: [vehicleId], references: [id])
  service         Service      @relation(fields: [serviceId], references: [id])
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@map("orders")
}

model Document {
  id        String   @id @default(cuid())
  orderId   String
  fileName  String
  fileUrl   String
  fileType  String
  fileSize  Int
  documentType DocumentType
  
  // Relations
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@map("documents")
}

model Pricing {
  id          String   @id @default(cuid())
  serviceType ServiceType
  plaqueType  String?
  basePrice   Float
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("pricing")
}

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String   @unique
  subject   String
  content   String
  variables Json?
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("email_templates")
}

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  status    EmailStatus
  error     String?
  sentAt    DateTime?
  
  createdAt DateTime @default(now())

  @@map("email_logs")
}

// Enums
enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum ServiceType {
  CARTE_GRISE
  PLAQUE_IMMATRICULATION
  DUPLICATA
  CHANGEMENT_ADRESSE
  CHANGEMENT_NOM
  VEHICLE_TRANSFER
}

enum OrderStatus {
  PENDING
  PROCESSING
  APPROVED
  REJECTED
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum DocumentType {
  IDENTITY_CARD
  DRIVER_LICENSE
  CARTE_GRISE
  INSURANCE_CERTIFICATE
  PROOF_OF_ADDRESS
  POWER_OF_ATTORNEY
  OTHER
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
  BOUNCED
}
